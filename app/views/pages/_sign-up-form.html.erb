<div class="col-xs-12 horizontal-center">
  <%= render 'friend-modal' %>
  <%= render 'thank-you-modal' %>

  <div class="sign-up-form form-inline text-center">


    <%= simple_form_for @request, url: "requests/reference", method: :post do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <input class="form-control string required sign-up-input" required="required" aria-required="true" placeholder="NAME" type="text" name="request[name]" id="request_name">
        <input class="form-control string required sign-up-input" required="required" aria-required="true" placeholder="EMAIL" type="text" name="request[email]" id="request_email">
      </div>

      <div class="form-group">
        <%= f.button :submit, "REQUEST INVITE", id: "request", class: "btn btn-primary sign-up-button" %>
      </div>

    <% end %>

  </div>
</div>
