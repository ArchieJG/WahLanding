<div class="col-xs-10 col-xs-offset-1 sign-up-form form-inline text-center">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "NAME" %>
    <%= f.input :email, required: true, label: false, placeholder: "EMAIL" %>
    <%= f.input :instahandle, required: true, label: false, placeholder: "INSTAGRAM HANDLE" %>
    <%# f.input :password, required: true, label: false, placeholder: "password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%# f.input :password_confirmation, required: true, label: false, placeholder: "password confirmation" %>
  </div>

  <div class="form-group">
    <%# f.button :submit, "Sign up" %>
    <button type="submit" name="commit" class="sign-up-button">
      <span class="sign-up-arrow">
        <i class="fa fa-arrow-right" aria-hidden="true"></i>
      </span>
    </button>
  </div>

  <% end %>

</div>
